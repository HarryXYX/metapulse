{
  "definitions" : {
    "SearchRequestContext" : {
      "description" : "Context that defines a search page requesting recommendations",
      "type" : "object",
      "additionalProperties" : false,
      "properties" : {
        "query" : {
          "description" : "Search query",
          "type" : "string"
        },
        "filters" : {
          "default" : [ ],
          "description" : "filters applied to search results",
          "type" : "array",
          "items" : {
            "$ref" : "#/definitions/Criterion"
          }
        }
      },
      "required" : [ "query", "filters" ]
    },
    "Criterion" : {
      "description" : "A criterion for matching a field with given value",
      "type" : "object",
      "additionalProperties" : false,
      "properties" : {
        "field" : {
          "description" : "The name of the field that the criterion refers to",
          "type" : "string"
        },
        "value" : {
          "description" : "The value of the intended field",
          "type" : "string"
        },
        "values" : {
          "default" : [ ],
          "description" : "Values. one of which the intended field should match\nNote, if values is set, the above \"value\" field will be ignored",
          "type" : "array",
          "items" : {
            "type" : "string"
          }
        },
        "condition" : {
          "default" : "EQUAL",
          "description" : "The condition for the criterion, e.g. EQUAL, START_WITH",
          "$ref" : "#/definitions/Condition"
        },
        "negated" : {
          "default" : false,
          "description" : "Whether the condition should be negated",
          "type" : "boolean"
        }
      },
      "required" : [ "field", "value", "values", "condition", "negated" ]
    },
    "Condition" : {
      "description" : "The matching condition in a filter criterion",
      "enum" : [ "CONTAIN", "END_WITH", "EQUAL", "IEQUAL", "IS_NULL", "EXISTS", "GREATER_THAN", "GREATER_THAN_OR_EQUAL_TO", "IN", "LESS_THAN", "LESS_THAN_OR_EQUAL_TO", "START_WITH", "DESCENDANTS_INCL", "ANCESTORS_INCL", "RELATED_INCL" ]
    }
  },
  "$ref" : "#/definitions/SearchRequestContext"
}