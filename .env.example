# MetaPulse All-in-One环境配置示例
# 复制此文件为.env并根据实际情况修改

# ===== 数据库配置 =====
POSTGRES_USER=metapulse
POSTGRES_PASSWORD=metapulse
POSTGRES_DB=metapulse
POSTGRES_PORT=5432

# ===== Elasticsearch配置 =====
ELASTICSEARCH_PORT=9200
ES_HEAP=1024m

# ===== Kafka配置 =====
KAFKA_PORT=9092

# ===== MetaPulse应用配置 =====
METAPULSE_PORT=8080
AUTH_ENABLED=true
TELEMETRY_ENABLED=false
LOG_LEVEL=INFO

# ===== JVM堆内存配置 =====
JVM_MIN_HEAP=2g
JVM_MAX_HEAP=4g
