# MetaPulse 前端生产环境配置
# ================================

# 生产环境后端 API 地址（使用相对路径，同源部署）
VITE_BACKEND_URL=

# GraphQL 端点
VITE_GRAPHQL_ENDPOINT=/api/graphql

# 环境标识
VITE_APP_ENV=production

# 应用名称
VITE_APP_NAME=MetaPulse

# 禁用开发者工具
VITE_ENABLE_DEVTOOLS=false

# 日志级别（生产环境只记录错误）
VITE_LOG_LEVEL=error

# 禁用 Mock 数据
VITE_USE_MOCK_DATA=false

# API 超时时间（毫秒）
VITE_API_TIMEOUT=30000

# 静态资源 CDN 地址（可选，如果使用 CDN）
VITE_CDN_URL=

# 启用生产分析工具
VITE_ENABLE_ANALYTICS=true

# 分析工具 ID（需要配置）
VITE_ANALYTICS_ID=

# 启用 Sentry 错误追踪（可选）
VITE_SENTRY_DSN=
